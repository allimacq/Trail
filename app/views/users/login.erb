<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<% end %>

<form action="/login" method="post">

    <label>Username:</label>
    <input type="text" name="username">

    <label>Password:</label>
    <input type="password" name="password">

    <input type="submit" value="Log In">
</form>
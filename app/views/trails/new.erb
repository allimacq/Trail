<h1>Create a Trail! </h1>

<form method="post" action="trails/new">

    <label>Select Which State the Trail is In:</label>
    <% State.all.each do |state|%>
    <input type="radio" name="<%= state.id %>" value="<%= state.name %>">
    <% end %>

    <label>Trail Name:</label>
    <input type="text" name="trail[name]" required>

    <label>Trail Length (in miles):</label>
    <input type="text" name="trail[distance]" required>

    <label>Trail Surface</label>
    <% surfaces = [ ]%>
    <% Trail.all.each do |trail|%>
        <% if surfaces.include?(trail.surface) == false %>
            <% surfaces << trail.surface %>
        <% end %>
        <% surfaces.each do |surface| %>
        <input type="checkbox" name="trail[surface]" value="<% surface %>%">
        <% end %>
    <% end %>

    <label>Trail Info:</label>
    <textarea name="trail[info]" rows="5" cols="50"required>
    <p> For the trail info, please add any information that someone who uses a stroller or wheelchair
    would need to know in order to enjoy the trail. Thank you for your contribution! </p>

    <input type="submit" value="Create New Trail!">
</form>